@model KutuphaneMvc1.Models.HomeEkrani
<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/Content/adminlte.css" rel="stylesheet" />
    <link href="~/Content/adminlte.min.css" rel="stylesheet" />
    <title>Ana Sayfa</title>
    <style>
        .kitap-card {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.04);
            padding: 16px;
            margin-bottom: 20px;
            text-align: center;
            background: #fff;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
        }

            .kitap-card img {
                max-width: 100%;
                height: 180px;
                object-fit: cover;
                border-radius: 6px;
                margin-bottom: 12px;
            }

            .kitap-card .kitap-title {
                font-weight: bold;
                font-size: 1.1rem;
                margin-bottom: 6px;
            }

            .kitap-card .kitap-author {
                color: #555;
                font-size: 0.98rem;
                margin-bottom: 10px;
            }

            .kitap-card .kitap-info {
                font-size: 0.95rem;
                margin-bottom: 4px;
            }

            .kitap-card .badge {
                margin-top: 8px;
            }
    </style>
</head>
<body>
    <div class="app-wrapper">
        <main class="app-main">
            <div class="app-wrapper">
                <main class="app-main">
                    <div class="app-content-header">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-sm-6"><h3 class="mb-0">Ana Ekran</h3></div>
                                <div class="col-sm-6">
                                    <ol class="breadcrumb float-sm-end">
                                        <li class="breadcrumb-item"><a href="#">Ana Ekran</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">İstatistikler</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="app-content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-12 col-sm-6 col-md-3">
                                    <div class="info-box">
                                        <span class="info-box-icon text-bg-primary shadow-sm">
                                            <i class="bi bi-gear-fill"></i>
                                        </span>
                                        <div class="info-box-content">
                                            <span class="info-box-text">Aktif Ödünç Sayısı</span>
                                            <span class="info-box-number">
                                                <small>@(Model?.AktifSayi ?? 0)</small>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 col-md-3">
                                    <div class="info-box">
                                        <span class="info-box-icon text-bg-danger shadow-sm">
                                            <i class="bi bi-hand-thumbs-up-fill"></i>
                                        </span>
                                        <div class="info-box-content">
                                            <span class="info-box-text">Sisteme Kayıtlı Kitap Sayısı</span>
                                            <span class="info-box-number">@(Model.KitapSayi)</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 col-md-3">
                                    <div class="info-box">
                                        <span class="info-box-icon text-bg-success shadow-sm">
                                            <i class="bi bi-cart-fill"></i>
                                        </span>
                                        <div class="info-box-content">
                                            <span class="info-box-text">Sistemdeki Ceza Tutarı</span>
                                            <span class="info-box-number">@(Model.CezaTutari)</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 col-md-3">
                                    <div class="info-box">
                                        <span class="info-box-icon text-bg-warning shadow-sm">
                                            <i class="bi bi-people-fill"></i>
                                        </span>
                                        <div class="info-box-content">
                                            <span class="info-box-text">Güncel Kullanıcı Sayısı</span>
                                            <span class="info-box-number">@(Model.KullaniciSayi)</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-4">
                                    <div class="col-md-12">
                                        <div class="card">
                                            <div class="card-header bg-primary text-white">
                                                <h3 class="card-title"><i class="bi bi-bookmark-plus-fill me-2"></i>Son Eklenen Kitaplar</h3>
                                            </div>
                                            <div class="card-body">
                                                <div class="row">
                                                    @foreach (var kitap in Model.SonEklenenKitaplar.Take(8))
                                                    {
                                                        <div class="col-12 col-sm-6 col-md-3 mb-4 d-flex">
                                                            <div class="kitap-card w-100">
                                                                <img src="@(kitap.KapakResmi ?? "~/OrtakNesneler/BFP/kitaponsayfa.png")" alt="@kitap.Adi" />
                                                                <div class="kitap-title">@kitap.Adi</div>
                                                                <div class="kitap-author">@kitap.YazarAdi @kitap.YazarSoyadi</div>
                                                                <div class="kitap-info"><strong>Sayfa:</strong> @kitap.SayfaSayisi</div>
                                                                <div class="kitap-info"><strong>Kategori:</strong> @kitap.Kategori</div>
                                                                <span class="badge @(kitap.MevcutStok)">
                                                                </span>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                                <a href="@Url.Action("KitaplariGoster", "Home")" class="btn btn-primary float-end mt-3">Tüm Kitapları Görüntüle</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/overlayscrollbars@2.10.1/browser/overlayscrollbars.browser.es6.min.js"
            integrity="sha256-dghWARbRe2eLlIJ56wNB+b760ywulqK3DzZYEpsg2fQ="
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
            integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
            crossorigin="anonymous"></script>
    <script src="~/Scripts/adminlte.js"></script>
    <script>
        const SELECTOR_SIDEBAR_WRAPPER = '.sidebar-wrapper';
        const Default = {
            scrollbarTheme: 'os-theme-light',
            scrollbarAutoHide: 'leave',
            scrollbarClickScroll: true,
        };
        document.addEventListener('DOMContentLoaded', function () {
            const sidebarWrapper = document.querySelector(SELECTOR_SIDEBAR_WRAPPER);
            if (sidebarWrapper && typeof OverlayScrollbarsGlobal?.OverlayScrollbars !== 'undefined') {
                OverlayScrollbarsGlobal.OverlayScrollbars(sidebarWrapper, {
                    scrollbars: {
                        theme: Default.scrollbarTheme,
                        autoHide: Default.scrollbarAutoHide,
                        clickScroll: Default.scrollbarClickScroll,
                    },
                });
            }
        });
    </script>
</body>
</html>